{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES6",
    "outDir": "lib",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [],
    "types": [],
    "rootDir": "src/ts",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "build",
    "build-utils",
    "temp",
    "lib"
  ]
}